<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<h2>Nuevo producto para <%= @category.name %></h2>
<%= form_with(model: [@category, @product], local: true) do |f| %>

<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price %>
</div>
<div class="form-group">
    <%= f.submit 'Guardar', class: "btn btn-success"  %>
</div>
  <% end %>

<%@products.each do |product| %>

<table class="table">
  <td>Producto: <%= product.name %></td>
  <td>Precio: <%= product.price %></td>
  <td><%= link_to 'Delete', category_product_path(@category, product), method: 'delete', class:'btn btn-danger' %></td>
</table>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
